<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/footbal_field_2" />


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/actBooking_btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:alpha="0.5"
                    android:backgroundTint="@android:color/white"
                    android:minHeight="48dp"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:fabSize="mini"
                    tools:ignore="SpeakableTextPresentCheck" />

                <LinearLayout
                    android:id="@+id/cardView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="160dp"
                    android:background="@drawable/bg_football_field_detail">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/actBooking_txtFieldName"
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:text="Huy Hoang Field - Field A"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/actRegister_haveNoAccount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="34/4e Tan Xuan Hoc Mon HCM" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:orientation="horizontal"/>


                        </LinearLayout>

                        <View
                            android:id="@+id/divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/actBooking_txtSelectDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border"
                                android:ems="10"
                                android:padding="3dp"
                                android:text="05/10/2021"
                                android:textSize="18dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/actBooking_btnCalendar"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:backgroundTint="#9DC030"
                                android:onClick="clickToChangeDate"
                                app:icon="@drawable/ic_baseline_calendar_today_24"
                                app:iconGravity="top"
                                app:iconSize="20dp"
                                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />
                        </LinearLayout>

                        <View
                            android:id="@+id/divider1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txtPriceOfDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4$/h"
                                android:textColor="#099CD9"
                                android:textSize="18dp"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:columnCount="4">

                            <ToggleButton

                                style="@style/MyToggleButton"
                                android:layout_height="48dp"
                                android:enabled="false"
                                android:textOff="7h-8h"
                                android:textOn="7h-8h" />

                            <ToggleButton
                                android:id="@+id/tgBtn"
                                style="@style/MyToggleButton"
                                android:layout_height="48dp"
                                android:textOff="8h-9h"
                                android:textOn="8h-9h" />

                            <ToggleButton
                                style="@style/MyToggleButton"
                                android:layout_height="48dp"
                                android:textOff="9h-10h"
                                android:textOn="9h-10h" />

                            <ToggleButton
                                style="@style/MyToggleButton"
                                android:layout_height="48dp"
                                android:textOff="10h-11h"
                                android:textOn="10h-11h" />
                        </GridLayout>

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:columnCount="4">

                            <ToggleButton
                                style="@style/MyToggleButton"
                                android:layout_height="48dp"
                                android:textOff="17h-18h"
                                android:textOn="17h-18h" />

                            <ToggleButton
                                style="@style/MyToggleButton"
                                android:layout_height="48dp"
                                android:textOff="18h-19h"
                                android:textOn="18h-19h" />

                            <ToggleButton
                                style="@style/MyToggleButton"
                                android:layout_height="48dp"
                                android:textOff="19h-20h"
                                android:textOn="19h-20h" />

                            <ToggleButton
                                style="@style/MyToggleButton"
                                android:layout_height="48dp"
                                android:textOff="21h-22h"
                                android:textOn="21h-22h" />

                        </GridLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/actBooking_btnAddToCart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="25dp"
                            android:backgroundTint="#9DC030"
                            android:onClick="clickToAddToCart"
                            android:text="Add to cart"
                            app:cornerRadius="20dp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>